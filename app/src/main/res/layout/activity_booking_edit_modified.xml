<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">

    <LinearLayout

        android:paddingBottom="20dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_edit_booking"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal"
            android:text="cancel"
            android:textColor="@color/appThemeColorText"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_marginBottom="-20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:backgroundTint="@color/appThemeColorDark"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_rounded_button_red"/>

                <TextView
                    android:id="@+id/delete_edit_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-3dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="delete"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </FrameLayout>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_rounded_button_red"/>
                <TextView
                    android:id="@+id/reschedule_edit_booking"
                    android:layout_marginTop="-3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reschedule"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:textSize="16sp"/>
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/content_booking_edit_modified" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>