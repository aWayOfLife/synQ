<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:paddingLeft="35dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Booking"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/appThemeColorDark"
                    android:textSize="22sp"/>

            </LinearLayout>

            <ImageView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_synq"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="35dp"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="booking purpose"
                android:paddingBottom="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/appThemeColorDark"
                android:textSize="20sp"/>
            <Spinner
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-7dp"
                android:entries="@array/service_selector"
                android:id="@+id/edit_booking_service_id" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="booking slot"
                android:paddingBottom="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/appThemeColorDark"
                android:textSize="20sp"/>
            <Spinner
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-7dp"
                android:entries="@array/slot_selector"
                android:id="@+id/edit_booking_slot" />

        </LinearLayout>



    </LinearLayout>





</FrameLayout>