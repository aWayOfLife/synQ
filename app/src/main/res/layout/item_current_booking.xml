<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/filled_booking_state"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/current_booking_date"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today - August 31"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="24sp"
            android:textColor="@color/appThemeColorDark"/>
        <TextView
            android:id="@+id/current_booking_id"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOKING ID : 31AUG20195689"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="12sp"
            android:textColor="@color/appThemeColorTextLight"/>
        <FrameLayout

            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chip"/>
            <TextView
                android:layout_marginTop="-1dp"
                android:gravity="center"
                android:id="@+id/current_booking_slot"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 am - 12 pm"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:textColor="@color/appThemeColorText"/>
        </FrameLayout>
        <TextView
            android:id="@+id/current_booking_eta"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22m 60s eta"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="20sp"
            android:textColor="@color/appThemeColorDark"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/current_booking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="waiting behind queue"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"
                android:textColor="@color/appThemeColorText"/>
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <ImageView


                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/appThemeColorSecondary" />
                <ImageView

                    android:layout_marginRight="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/appThemeColorPrimary" />

            </FrameLayout>

        </LinearLayout>
        <ImageView

            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/appThemeColorSecondary"/>

        <TextView
            android:id="@+id/current_booking_service_id"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cash withdrawal"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="14sp"
            android:textColor="@color/appThemeColorText"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/empty_booking_state"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView


            android:layout_width="match_parent"
            android:scaleType="centerInside"
            android:layout_height="230dp"
            android:src="@drawable/ic_undraw_empty" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/appThemeColorPrimary"/>
</FrameLayout>